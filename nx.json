{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "intercept-game",
  "affected": {
    "defaultBase": "main"
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    ".eslintrc.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test",
          "e2e",
          "build-storybook"
        ],
        "accessToken": "NWQ1MDA4YjUtYjE3Ny00MzljLWE2MzAtYzMzMzIzNTE2ODM5fHJlYWQtd3JpdGU="
      }
    }
  },
  "generators": {
    "@nrwl/react": {
      "application": {
        "style": "scss",
        "linter": "eslint",
        "babel": true,
        "strict": true,
        "e2eTestRunner": "none"
      },
      "component": {
        "style": "scss"
      },
      "library": {
        "linter": "eslint",
        "unitTestRunner": "jest",
        "strict": true,
        "standaloneConfig": true,
        "buildable": true,
        "publishable": false
      }
    },
    "@nrwl/next": {
      "app": {
        "style": "styled-components",
        "linter": "eslint",
        "babel": true,
        "strict": true,
        "e2eTestRunner": "none"
      },
      "component": {
        "style": "scss"
      },
      "library": {
        "linter": "eslint",
        "unitTestRunner": "jest",
        "strict": true,
        "standaloneConfig": true,
        "buildable": true,
        "publishable": false
      },
      "application": {
        "style": "styled-components",
        "linter": "eslint"
      }
    },
    "@nrwl/node:library": {
      "linter": "eslint",
      "unitTestRunner": "jest",
      "strict": true,
      "standaloneConfig": true,
      "buildable": true,
      "publishable": false
    }
  },
  "defaultProject": "internal-client",
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    }
  }
}
